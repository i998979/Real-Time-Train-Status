<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?attr/colorSurfaceVariant"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipChildren="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_station_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Fo Tan"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipChildren="false"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/train_up_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false" />

            <FrameLayout
                android:id="@+id/train_dn_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-4dp">

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#52B4E5" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@android:drawable/presence_online"
                android:backgroundTint="#FFFFFF" />

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_trip_origin_24" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipChildren="false"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-4dp">

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#52B4E5" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@android:drawable/presence_online"
                android:backgroundTint="#FFFFFF" />

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_trip_origin_24" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:clipChildren="false"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/train_up_spur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false" />

            <FrameLayout
                android:id="@+id/train_dn_spur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_station_spur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Racecourse"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>