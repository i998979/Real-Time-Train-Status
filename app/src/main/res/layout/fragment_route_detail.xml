<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorSecondary">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_return"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="36dp"
            app:iconTint="?attr/colorOutline" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center_vertical"
            android:padding="0dp"
            app:icon="@drawable/baseline_share_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="36dp"
            app:iconTint="?attr/colorOutline" />

        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:50"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:59"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_journey_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2月10日(週二)"
                android:textColor="?attr/colorOutline"
                android:textSize="14sp" />
        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:id="@+id/sv_route"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/route_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_journey_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 分"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="轉乘 "
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_interchange_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 次"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="$ "
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_route_picture"
                        style="@style/OptionButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_platform_border"
                        android:drawableTop="@drawable/baseline_camera_alt_24"
                        android:drawableTint="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="螢幕截圖保存"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorOnSurfaceInverse" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_route_save"
                        style="@style/OptionButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_platform_border"
                        android:drawableTop="@drawable/baseline_route_24"
                        android:drawableTint="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="保存至\n常用檢索"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorOnSurfaceInverse" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_check_value"
                        style="@style/OptionButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_platform_border"
                        android:drawableTop="@drawable/baseline_credit_card_24"
                        android:drawableTint="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="八達通\n餘額確認"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorOnSurfaceInverse" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>