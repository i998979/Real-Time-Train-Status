<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="80dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#444444" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="車票設定"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconSize="36dp"
            app:iconTint="#92ADBB" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_ticket_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:checkedButton="@id/rb_octopus"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_octopus"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/baseline_credit_card_24"
            android:text="八達通" />

        <RadioButton
            android:id="@+id/rb_sj"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/outline_transit_ticket_24"
            android:text="單程票" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:background="#33AAAAAA" />
    ```

    <RadioGroup
        android:id="@+id/rg_fare_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checkedButton="@id/rb_adult">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_adult"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/baseline_boy_24"
            android:text="成人" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_concession"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/outline_child_hat_24"
            android:text="小童 (特惠)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_concession2"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/outline_child_hat_24"
            android:text="長者 (特惠)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_joyyou_65"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/baseline_elderly_24"
            android:text="樂悠咭 (65歲或以上)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_joyyou_60"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/baseline_elderly_24"
            android:text="樂悠咭 (60-64歲)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_disability"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/baseline_accessible_24"
            android:text="殘疾人士" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_student"
            style="@style/RadioButtonStyle"
            android:drawableLeft="@drawable/baseline_school_24"
            android:text="學生" />
    </RadioGroup>
</LinearLayout>