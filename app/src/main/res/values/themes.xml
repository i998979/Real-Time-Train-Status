<resources>

    <style name="Theme.RealTimeTrainStatus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TabText.Selected" parent="TabText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>

        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:background">@drawable/bg_platform_border</item>
        <item name="android:backgroundTint">?attr/colorOnSurfaceInverse</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:button">@drawable/selector_radio_check</item>
        <item name="buttonTint">@color/selector_radio_tint</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:drawableLeft">@drawable/baseline_directions_walk_24</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableTint">?android:attr/colorForeground</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>